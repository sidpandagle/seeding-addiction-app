{
  "expo": {
    "name": "Seeding",
    "slug": "seeding",
    "scheme": "seeding",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon.png",
    "userInterfaceStyle": "light",
    "jsEngine": "hermes",
    "assetBundlePatterns": [
      "assets/fonts/**",
      "assets/images/**",
      "assets/*.png"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seeding.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.seeding.app",
      "jsEngine": "hermes",
      "enableProguardInReleaseBuilds": true,
      "enableShrinkResourcesInReleaseBuilds": true,
      "permissions": [
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/app-icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "5ef964ec-8a28-4f7e-b62c-7b15f3ca3d44"
      }
    },
    "plugins": [
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#f9fafb",
          "image": "./assets/splash.png",
          "resizeMode": "contain",
          "dark": {
            "image": "./assets/splash-dark.png",
            "backgroundColor": "#395141"
          },
          "imageWidth": 350
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/app-icon.png",
          "color": "#395141"
        }
      ]
    ],
    "notification": {
      "icon": "./assets/app-icon.png",
      "color": "#395141",
      "androidMode": "default",
      "androidCollapsedTitle": "Seeding"
    }
  }
}
